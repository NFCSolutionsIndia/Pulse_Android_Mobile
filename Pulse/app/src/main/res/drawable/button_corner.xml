<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom 2dp Shadow -->

    <item android:bottom="11px"
        android:top="11px"
        android:left="11px"
        android:right="11px">

        <shape android:shape="rectangle" >

            <solid android:color="#ccc" />

            <corners android:radius="0dp" />

        </shape>

    </item>

    <!-- White Top color -->

    <item android:bottom="15px"
        android:top="15px"
        android:left="15px"
        android:right="15px">

        <shape android:shape="rectangle" >

            <solid android:color="#fbfbfb" />

            <corners android:radius="0dp" />

        </shape>

    </item>

</layer-list>