<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/closereassign"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@mipmap/closeblack" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="10dp"
        android:text="Reason for Re-Assign"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/dp_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/very_light_gray"
        android:orientation="vertical">


        <EditText
            android:id="@+id/dialogue_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="Write your reason for re-assignment here "
            android:inputType="textPersonName|textCapSentences|textMultiLine"
            android:lines="20"
            android:maxLength="500"
            android:minLines="5"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:scrollHorizontally="false"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/light_gray"
            android:textSize="@dimen/dp_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_CustomAlert_YesNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_CustomAlert_OK"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/closedtextcolor"
            android:gravity="center"
            android:padding="10dp"
            android:text="Re-Assign"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="@dimen/text_head" />

    </LinearLayout>

</LinearLayout>