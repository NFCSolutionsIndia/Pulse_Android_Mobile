<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15">


        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/usedmw"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lytContainer"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/question"
            android:focusable="true"
            android:focusableInTouchMode="true"
          >

        <EditText
            android:id="@+id/textusedmw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_corner"
            android:gravity="left"
            android:inputType="textCapSentences"
            android:padding="@dimen/dp_15"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:visibility="gone"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <EditText
                android:id="@+id/datetext"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/button_corner"
                android:clickable="true"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_calendar"
                android:focusable="false"
                android:hint=" Date"
                android:inputType="textCapSentences"
                android:maxLength="35"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"

            android:visibility="gone"></LinearLayout>


        <RelativeLayout
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/rectimg" />


            <TextView
                android:id="@+id/btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/buttonborder"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text=" Upload "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinner_bg"
            android:orientation="horizontal"
            android:padding="5dp"

            android:visibility="gone"></LinearLayout>

        <LinearLayout
            android:id="@+id/l5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/question"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinner_bg"
            android:orientation="horizontal"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/subtract"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@mipmap/minus" />


                <TextView
                    android:id="@+id/steppercount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/gradiantheader"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_18" />

                <ImageView
                    android:id="@+id/add"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:src="@mipmap/plus" />


            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d9d9d9"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radio_checklist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">


                    <RadioButton
                        android:id="@+id/radio_check"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/dp_5"
                        android:buttonTint="@color/black"
                        android:checked="true"
                        android:text="Yes"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_18" />


                    <RadioButton
                        android:id="@+id/radio_unchecked"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="2dp"
                        android:buttonTint="@color/black"
                        android:text="No"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_18" />


                </RadioGroup>

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
